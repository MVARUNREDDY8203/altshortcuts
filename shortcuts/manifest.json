{
    "manifest_version": 3,
    "name": "Your Extension Name",
    "version": "1.0",
    "permissions": ["activeTab", "scripting", "storage", "alarms"],
    "host_permissions": ["https://altshortcuts.pages.dev/*"],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html"
    },
    "commands": {
        "focus_search": {
            "suggested_key": {
                "default": "Alt+S"
            },
            "description": "Focus the search input"
        },
        "focus_write": {
            "suggested_key": {
                "default": "Alt+W"
            },
            "description": "Focus the write input"
        }
    }
}
